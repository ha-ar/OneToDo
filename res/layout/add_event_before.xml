<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/before_repeat_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_fields_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/before_event_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/reminder" />

        <TextView
            android:id="@+id/before_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="Reminder"
            android:paddingLeft="15dp"
            android:textColor="#aeaeae"
            android:textColorHint="@color/hint_color"
            android:textSize="17.78sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/before_grid_view_linear_event"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/add_task_before_tabs"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            app:pstsActivateTextColor="@color/_4d4d4d"
            app:pstsDeactivateTextColor="#CCCCCC"
            app:pstsTabSwitch="true" >
        </com.astuetz.PagerSlidingTabStrip>

        <android.support.v4.view.ViewPager
            android:id="@+id/add_event_before_pager"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/add_task_before_tabs"
            android:background="@drawable/input_fields_normal" />
    </LinearLayout>

</LinearLayout>