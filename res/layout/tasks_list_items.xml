<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    
    android:background="#88FFFFFF" >

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/label_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/label_icon"
            android:ellipsize="end"
            android:maxLength="35"
            android:maxLines="1"
            android:text="Board Meeting will not ve over soon please"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/label_icon"
            android:ellipsize="end"
            android:maxLength="35"
            android:maxLines="1"
            android:text="Will held in board room. Pleas be on time" />

        <TextView
            android:id="@+id/location123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/label_icon"
            android:maxLines="1"
            android:text="Hotel One" />

        <TextView
            android:id="@+id/attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/location"
            android:text="at" />

        <TextView
            android:id="@+id/shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/attachment"
            android:text="sh" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="1px"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/right_layout"
        android:background="@color/blue_color" />

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00AM" />

        <TextView
            android:id="@+id/reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reminder_time"
            android:text="12/12/12" />
    </RelativeLayout>

</RelativeLayout>