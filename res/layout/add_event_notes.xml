<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notes_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/underline_textview_lightgray"
        android:paddingBottom="2dp"
        android:text="SUBTASKS"
        android:textColor="@color/active"
        android:textSize="15.56sp"
        android:typeface="monospace" />

    <LinearLayout
        android:id="@+id/notes_checklist_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_fields_full"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp" >

        <EditText
            android:id="@+id/add_sub_task_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="-20dp"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Add a subtask"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textColor="#AEAEAE"
            android:textSize="22.22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/input_fields_gray"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/priority_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Priority"
            android:textColor="@color/dark_grey_color"
            android:textSize="22.22sp" />

        <RadioGroup
            android:id="@+id/priority_radio_buttons_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/priority_none"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_photo_buttons"
                android:button="@null"
                android:checked="true"
                android:text="None"
                android:textColor="@android:color/white" />

            <RadioButton
                android:id="@+id/priority_single"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/rounded_second"
                android:button="@null"
                android:text="!"
                android:textColor="@color/deep_sky_blue"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/priority_double"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/rounded_second"
                android:button="@null"
                android:text="!!"
                android:textColor="@color/deep_sky_blue"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/priority_max"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="-2dp"
                android:layout_toRightOf="@+id/Button02"
                android:background="@drawable/rounded_last"
                android:button="@null"
                android:text="!!!"
                android:textColor="@color/deep_sky_blue"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/underline_textview_lightgray"
            android:paddingBottom="5dp"
            android:text="NOTES"
            android:textColor="@color/active"
            android:textSize="15.56sp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/notes_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/Button03"
            android:layout_below="@+id/priority_text"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Notes"
            android:inputType="textMultiLine"
            android:minHeight="100dp"
            android:padding="10dp"
            android:textColor="@color/grey"
            android:textColorHint="#bababa"
            android:textSize="22.22sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>