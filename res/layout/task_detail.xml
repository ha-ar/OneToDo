<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/launcher_96" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="22"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/mon_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/current_date"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/current_date"
            android:text="JUL&apos;14"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/current_date"
            android:layout_alignLeft="@+id/mon_year"
            android:layout_below="@+id/mon_year"
            android:text="Monday"
            android:textColor="@color/green_line_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@+id/current_date"
            android:layout_alignRight="@+id/mon_year"
            android:layout_below="@id/day"
            android:background="@color/dark_grey_color" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginLeft="10dp"
            android:text="11:00 AM"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/repeat_interval"
            android:layout_alignTop="@+id/mon_year"
            android:text="15 mins"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/repeat_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/reminder_time"
            android:layout_marginRight="10dp"
            android:text="Every Week"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_time"
        android:background="#88FFFFFF"
        android:padding="10dp" >

        <TextView
            android:id="@+id/label_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/label_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Board Meeting"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@id/title"
            android:text="Lorem ipsum nlakm asdj asdlkk jasdhjbasdhj Lorem ipsum nlakm asdj asdlkk jasdhjbasdhj"
            android:textColor="@color/dark_grey_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/location_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="5dp"
        android:background="#88FFFFFF"
        android:padding="10dp" >

        <TextView
            android:id="@+id/location_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/location_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Location"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@id/title"
            android:text="Lorem ipsum nlakm asdj asdlkk jasdhjbasdhj Lorem ipsum nlakm asdj asdlkk jasdhjbasdhj"
            android:textColor="@color/dark_grey_color" />

        <TextView
            android:id="@+id/show_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@id/location_address"
            android:text="Show Map"
            android:textColor="@color/blue_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shared_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_content"
        android:layout_marginTop="5dp"
        android:background="#88FFFFFF"
        android:padding="10dp" >

        <TextView
            android:id="@+id/shared_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shared_icon"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user" />
        </LinearLayout>

        <TextView
            android:id="@+id/shared_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shared_icon"
            android:layout_toRightOf="@+id/shared_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Shared With"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/attachement"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/shared_content" >

        <TextView
            android:id="@+id/attach_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Attached Image"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/attached_document_image"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/attach_image"
            android:background="@drawable/splash_screen" />
    </RelativeLayout>

</RelativeLayout>