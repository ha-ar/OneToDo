<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_task_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="0dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/assign_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/assign_task"
            android:paddingBottom="5dp" />

        <ImageButton
            android:id="@+id/share_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/share_task"
            android:paddingBottom="5dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/added_contacts_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/input_fields_normal"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <ImageButton
        android:id="@+id/share_task_replica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/share_task"
        android:paddingBottom="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/added_contacts_share_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/input_fields_normal"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <!--
         <include
        android:id="@+id/assign_contacts_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/contacts_share_layout"
        android:visibility="gone" />
    -->

</LinearLayout>