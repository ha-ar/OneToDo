<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/view_background" />

    <LinearLayout
        android:id="@+id/notes_checklist_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_fields_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp" >

        <!--
             <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.3"
            android:button="@drawable/task_chechk_box"
            android:text="" />
        -->

        <EditText
            android:id="@+id/add_sub_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Add a subtask"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textColor="#414242"
            android:textSize="17.78sp" />

        <!--
            <ImageButton
            android:id="@+id/moreImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_add" />
        -->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/view_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/input_fields_gray"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/priority_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="Priority"
            android:textColor="@color/inactive"
            android:textSize="17.78sp" />

        <RadioGroup
            android:id="@+id/priority_radio_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/priority_none"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_photo_buttons"
                android:button="@null"
                android:checked="true"
                android:text="None"
                android:textColor="@android:color/white" />

            <RadioButton
                android:id="@+id/priority_single"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/rounded_second"
                android:button="@null"
                android:text="!"
                android:textColor="@color/deep_sky_blue"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/priority_double"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/rounded_second"
                android:button="@null"
                android:text="!!"
                android:textColor="@color/deep_sky_blue"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/priority_max"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="-2dp"
                android:layout_toRightOf="@+id/Button02"
                android:background="@drawable/rounded_last"
                android:button="@null"
                android:text="!!!"
                android:textColor="@color/deep_sky_blue"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="top|left"
        android:hint="Notes"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/hint_color"
        android:textSize="17.78sp" />

    <EditText
        android:id="@+id/notes_scheduale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Button03"
        android:layout_below="@+id/priority_text"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_fields_gray"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:minHeight="80dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#414242"
        android:textColorHint="#bababa"
        android:textSize="17.78sp" />

</LinearLayout>