<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_button_container_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_marginTop="10dp"
    android:layout_row="0"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/attach_event"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_fields_normal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:visibility="gone"
        android:weightSum="2" >

        <TextView
            android:id="@+id/image_event"
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.87"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:text="Attachments"
            android:textColor="#000000"
            android:textSize="17.78sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/added_image_outer_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:background="@drawable/input_fields_gray_normal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:visibility="visible" >
    </LinearLayout>

</LinearLayout>
    
