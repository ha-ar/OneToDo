<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_container1"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/input_fields_gray"
    android:visibility="visible"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/location_event_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/location_grey" />

    <AutoCompleteTextView
        android:id="@+id/location_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@android:color/transparent"
        android:hint="Add Location"
        android:textSize="22.22sp" />

</LinearLayout><!--
