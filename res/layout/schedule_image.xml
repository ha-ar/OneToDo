<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_button_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_row="0"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/attach_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_fields"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        android:paddingRight="0dp"
        android:weightSum="2" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/attachement_green" />

        <TextView
            android:id="@+id/image"
            android:layout_width="204dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.87"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:text="Attachments"
            android:textColor="#568c67"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedattacment"
            android:gravity="center|center_horizontal"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/added_image_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <!--
         <include
        android:id="@+id/gallery_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        layout="@layout/gallery_picker"
        android:visibility="gone" />
    -->

</LinearLayout>