<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/title_project1_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:animateLayoutChanges="true"
        android:background="#ffffff"
        android:padding="10dp" >

        <ImageButton
            android:id="@+id/assign_task_button"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/assign" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/assign_task_button"
            android:background="@color/light_grey_color" />

        <EditText
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/divider"
            android:layout_toRightOf="@id/completed_task"
            android:background="@android:color/transparent"
            android:hint="Add Title"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="-5dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/task_title"
            android:layout_below="@+id/task_title"
            android:text="Assigned to usman"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/blue_color" />

        <CheckBox
            android:id="@+id/completed_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/task_title"
            android:layout_alignBottom="@+id/task_title"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:button="@drawable/task_chechk_box" />

    </RelativeLayout>

</LinearLayout>
