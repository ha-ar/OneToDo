<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue_color"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Assign To"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <com.vector.onetodo.ContactsCompletionView
        android:id="@+id/searchView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
		android:lines="4"
		android:scrollbars="vertical"
		android:inputType="text"
		android:scrollbarDefaultDelayBeforeFade="1000"        
        android:background="@drawable/input_fields_normal"
        android:padding="10dp"
        android:textSize="18sp" >

        <requestFocus />
    </com.vector.onetodo.ContactsCompletionView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/assign"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/unchecked_green"
            android:gravity="center"
            android:text="Assign"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/unchecked_red"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>